<div metal:use-macro="view.layout">
    <div metal:fill-slot="content">

        <h1>Books</h1>

        <div class="books" tal:repeat="b books">
            <div class="book">
                <h2>${b.title}</h2>
                <div class="price">${b.price}</div>
                <div class="ch">${b.chapter_count}</div>
            </div>
        </div>

    </div>
</div>
